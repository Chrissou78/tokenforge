# =========================================
# TokenForge Pro - Environment Configuration
# =========================================
#
# ⚠️ CRITICAL: NEVER commit this file to Git with real values!
# Add .env to your .gitignore file
#
# Copy this file to .env and update with your values
#

# ═══════════════════════════════════════════════════════════════════
# 🔴 CRITICAL CONFIGURATION (REQUIRED BEFORE PRODUCTION)
# ═══════════════════════════════════════════════════════════════════

# Fee Recipient Address
# This address receives all platform fees
# ⚠️ CHANGE THIS BEFORE DEPLOYING TO PRODUCTION!
FEE_RECIPIENT_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb

# ═══════════════════════════════════════════════════════════════════
# 🌐 ENVIRONMENT SETTINGS
# ═══════════════════════════════════════════════════════════════════

# Environment: production, development, or testnet
NODE_ENV=development

# Enable/disable testnet mode (reduced fees for testing)
TESTNET_MODE=false

# Enable debug logging
DEBUG_MODE=false

# Show configuration warnings
SHOW_CONFIG_WARNINGS=true

# ═══════════════════════════════════════════════════════════════════
# 💰 FEE CONFIGURATION (USD)
# ═══════════════════════════════════════════════════════════════════

# Token Creation Fees
FEE_TOKEN_CREATION=500
FEE_TOKEN_CREATION_TESTNET=0.001

# Multi Sender Fees
FEE_MULTI_SENDER_BASE=10
FEE_MULTI_SENDER_PER_ADDRESS=0.5

# Multi Buyer Fees
FEE_MULTI_BUYER_BASE=20
FEE_MULTI_BUYER_PER_WALLET=1

# Batch Collector Fee
FEE_BATCH_COLLECTOR=15

# Vanity Generator Fee (0 = free)
FEE_VANITY_GENERATOR=0

# ═══════════════════════════════════════════════════════════════════
# 🔐 SECURITY SETTINGS
# ═══════════════════════════════════════════════════════════════════

# Auto-clear timeout (minutes) - 0 to disable
AUTO_CLEAR_TIMEOUT=30

# Require confirmation before clearing data
CONFIRM_CLEAR=true

# Show security warnings before sensitive operations
SHOW_SECURITY_WARNINGS=true

# Require checkbox acceptance of risks
REQUIRE_RISK_ACCEPTANCE=true

# ═══════════════════════════════════════════════════════════════════
# 🌐 API CONFIGURATION
# ═══════════════════════════════════════════════════════════════════

# CoinGecko API
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=

# API Rate Limiting
API_RATE_LIMIT_MS=1000
API_TIMEOUT_MS=10000

# API Retry Settings
API_MAX_RETRIES=3
API_RETRY_DELAY_MS=2000

# ═══════════════════════════════════════════════════════════════════
# 🔗 RPC ENDPOINTS (Optional - uses public endpoints if not provided)
# ═══════════════════════════════════════════════════════════════════

# Ethereum
ETHEREUM_RPC_URL=
ETHEREUM_API_KEY=

# Polygon
POLYGON_RPC_URL=
POLYGON_API_KEY=

# BSC
BSC_RPC_URL=

# Arbitrum
ARBITRUM_RPC_URL=
ARBITRUM_API_KEY=

# Optimism
OPTIMISM_RPC_URL=
OPTIMISM_API_KEY=

# Base
BASE_RPC_URL=
BASE_API_KEY=

# ═══════════════════════════════════════════════════════════════════
# 📊 ANALYTICS (Optional)
# ═══════════════════════════════════════════════════════════════════

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Sentry Error Tracking
SENTRY_DSN=

# ═══════════════════════════════════════════════════════════════════
# 📝 NOTES
# ═══════════════════════════════════════════════════════════════════
#
# 1. Never commit .env file with real values to Git
# 2. Always use .env.example as template
# 3. Keep production .env file secure
# 4. Rotate sensitive values regularly
# 5. Different .env for each environment (dev, staging, prod)
#
# ═══════════════════════════════════════════════════════════════════
